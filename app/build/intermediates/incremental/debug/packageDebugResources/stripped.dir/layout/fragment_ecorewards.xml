<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ecorewards.EcoRewardsFragment">

    <TextView
        android:id="@+id/text_ecorewards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnE001"
        android:layout_width="220dp"
        android:layout_height="116dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="35dp"
        android:background="@color/green"
        android:text="Redeem\nVoucher"
        android:fontFamily="@font/alata"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/BtnE002"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BtnE002"
        android:layout_width="220dp"
        android:layout_height="116dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="36dp"
        android:background="@color/green"
        android:text="EcoCoins\nBalance"
        android:fontFamily="@font/alata"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/BtnE003"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnE001" />

    <Button
        android:id="@+id/BtnE003"
        android:layout_width="220dp"
        android:layout_height="116dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="166dp"
        android:background="@color/green"
        android:text="EcoRewards\nCatalog"
        android:fontFamily="@font/alata"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnE002" />

</androidx.constraintlayout.widget.ConstraintLayout>