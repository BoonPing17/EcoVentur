<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/e001"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/green"
    tools:context=".ui.ecorewards.fragments.RedeemVoucherFragment">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="182dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/villagegrocer"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="30dp"
        app:cardCornerRadius="20dp"
        android:backgroundTint="@color/white"
        android:layout_marginTop="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/voucher"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:text="1 x voucher worth RM 5"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="30dp"
                android:text="EcoCoins will be deducted after pressing the REDEEM button. Voucher will be stored under Active tab."
                android:textColor="@color/black"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <ImageView
                    android:id="@+id/imageCoin"
                    android:layout_width="91dp"
                    android:layout_height="74dp"
                    android:src="@drawable/ecocoin"/>

                <TextView
                    android:id="@+id/ecvalue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1000 ec"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"/>
            </LinearLayout>

            <Button
                android:id="@+id/redeem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/green"
                android:textSize="30sp"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"
                android:text="REDEEM"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>