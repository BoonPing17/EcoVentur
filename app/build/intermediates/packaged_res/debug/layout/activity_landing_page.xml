<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/landingpagebackground"
    tools:context=".ui.user.LandingPageActivity">


    <Button
        android:id="@+id/welLogin"
        android:layout_width="177dp"
        android:layout_height="63dp"
        android:layout_marginTop="36dp"
        android:backgroundTint="#FFFDC8"
        android:fontFamily="@font/amaranth"
        android:text="Continue"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sdg" />

    <ImageView
        android:id="@+id/welcomeword"
        android:layout_width="206dp"
        android:layout_height="235dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.197"
        app:srcCompat="@drawable/welcomeword" />

    <ImageView
        android:id="@+id/sdg"
        android:layout_width="135dp"
        android:layout_height="116dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeword"
        app:srcCompat="@drawable/sdg" />

</androidx.constraintlayout.widget.ConstraintLayout>